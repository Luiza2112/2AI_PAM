<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Projeto.NotePage"
             Title="NotePage">
    <VerticalStackLayout>
        <Editor Placeholder="Escreva aqui"
                SemanticProperties.Description="Caixa de texto para anotação"
                x:Name="NoteEditor"
            />
        <Label></Label>
        <Button Text="Salvar"
                SemanticProperties.Description="Botão para salvar"
                x:Name="SaveButton"
                Clicked="SaveButton_Clicked"
            />
        <Label></Label>
        <Button Text="Deletar"
                SemanticProperties.Description="Botão para deletar"
                x:Name="DeleteButton"
                Clicked="DeleteButton_Clicked"
            />
    </VerticalStackLayout>
</ContentPage>